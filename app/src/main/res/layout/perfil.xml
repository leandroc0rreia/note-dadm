<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activity_Perfil">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnUserSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/btnroundgreen"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Guardar"
                android:textColor="@color/white"
                android:textSize="13dp" />

            <Button
                android:id="@+id/btnUserBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/btnroundblue2"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Cancelar"
                android:textColor="@color/white"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/profileFirstName"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/textfieldround"
                android:ems="10"
                android:fontFamily="@font/ubuntu_bold"
                android:hint="Nome próprio"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/black"
                android:textColorHint="#858585"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/profileLastName"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/textfieldround"
                android:ems="10"
                android:fontFamily="@font/ubuntu_bold"
                android:hint="Apelido"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/black"
                android:textColorHint="#858585"
                android:textSize="16sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/profileEmail"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/linearNames"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/textfieldround"
            android:ems="10"
            android:fontFamily="@font/ubuntu_bold"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/black"
            android:textColorHint="#858585"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/profilePassword"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/profileEmail"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/textfieldround"
            android:ems="10"
            android:fontFamily="@font/ubuntu_bold"
            android:hint="Palavra-chave"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/black"
            android:textColorHint="#858585"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/profilePasswordConfirm"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/profilePassword"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/textfieldround"
            android:ems="10"
            android:fontFamily="@font/ubuntu_bold"
            android:hint="Confirmar palavra-chave"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/black"
            android:textColorHint="#858585"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/profileTextDateOfBirth"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/profilePasswordConfirm"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/ubuntu"
            android:text="Data de nascimento" />

        <EditText
            android:id="@+id/profileDateOfBirth"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/profileTextDateOfBirth"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/textfieldround"
            android:ems="10"
            android:fontFamily="@font/ubuntu_bold"
            android:hint="Exemplo: 01/01/2001"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/black"
            android:textColorHint="#858585"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/profileTextGender"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/profileDateOfBirth"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/ubuntu"
            android:text="Género" />

        <RadioGroup
            android:id="@+id/profileChooseGender"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/profileTextGender"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/profileGenderMasc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="#5196FF"
                android:fontFamily="@font/ubuntu"
                android:text="Masc"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/profileGenderFem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="#5196FF"
                android:fontFamily="@font/ubuntu"
                android:text="Fem"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="39dp"
                tools:layout_editor_absoluteY="497dp" />

            <RadioButton
                android:id="@+id/profileGenderOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="#5196FF"
                android:checked="true"
                android:fontFamily="@font/ubuntu"
                android:text="Outro"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="497dp" />

        </RadioGroup>

    </RelativeLayout>

</RelativeLayout>